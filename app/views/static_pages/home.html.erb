<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="doc_form">
        <%= render "shared/doc_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= t "list_doc" %>
      <%= render "shared/list" %>
    </div>
  </div>
<% else %>
  <% provide :title, t("home") %>
  <div class="center jumbotron">
    <%= t "welcome_html" %>
  </div>
<% end %>
