<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= link_to t("eDoc"), root_path, id: "logo", class: "navbar-brand" %>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("home"), root_path %></li>
          <% if logged_in? %>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
                <%= current_user.fullname %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_user %></li>
                <li><%= link_to t("setting"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("login"), login_path %></li>
          <% end %>
        </ul>
        <%= form_tag("/search", method: :get, remote: true, class: "form-inline my-2 my-lg-0") do %>
          <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2" %>
          <%= submit_tag t("search"), :name => nil, class: "btn btn-outline-success my-2 my-sm-0" %>
        <% end %>
      </div>
    </nav>
  </div>
</header>
